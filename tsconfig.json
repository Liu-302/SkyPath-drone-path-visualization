{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2017",
    "types": ["vite/client"],
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "ignoreDeprecations": "5.0",
    "noUnusedLocals": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "strict": true,

    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.fes/*"]
    }
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
    "typings/**/*",
    "config/**/*",
    "*.js",
    ".fes.js"
  ],

  "exclude": [
    "build",
    "dist",
    "scripts",
    "webpack",
    "jest",
    "node_modules"
  ]
}
