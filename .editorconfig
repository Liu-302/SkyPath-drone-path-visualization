# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4
indent_style = space

[*.xml]
indent_size = 4
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.yaml]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

[*.md]
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[*.bat]
end_of_line = crlf
charset = utf-8

[*.sh]
end_of_line = lf
charset = utf-8

[*.{html,vue}]
indent_size = 2

[*.{ts,js,jsx,tsx}]
indent_size = 2
